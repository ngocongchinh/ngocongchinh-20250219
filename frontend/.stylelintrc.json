{
  "extends": ["stylelint-prettier/recommended", "stylelint-config-standard"],
  "rules": {
    "declaration-no-important": true,
    "selector-class-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": []
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "local"]
      }
    ]
  }
}
